$widget_content.each(function() {
  try {
    var $this = $(this);
    var data = $this.metadata({type: "html5", name: "data-chart"});

    var g = new Bluff.Bar($this.find("canvas")[0], "460x300");

    g.set_theme({
        colors: ['#5C5C5C', '#BEBEBE', '#626262', '#E5E5E5', '#727272'],
        marker_color: '#373636',
        font_color: 'white',
        background_colors: ['rgba(0,0,0,0)', 'rgba(0,0,0,0)']
    });

    $.each(data.chart, function() {
      g.data(this.label, this.values);
    });

    g.hide_legend = false;
    g.hide_title = true;
    g.minimum_value = 0;
    g.draw();

  } catch(e) {}
});
