$widget_content.each(function() {
  var $this = $(this);

  $this.innerfade({
    speed: 1000,
    timeout: 30000,
    type: 'sequence'
  });
  
  $($this).hover(
    function() {
      $(".type-bar", $this.parent().parent()).css("z-index", "0");
      $("span.popup", $this).css("display", "block");
    },
    function() {
      $("span.popup", $this).css("display", "none");
      $(".type-bar", $this.parent().parent()).css("z-index", "30");
    }
  );

});
