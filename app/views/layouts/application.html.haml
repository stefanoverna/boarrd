!!! strict
%html
  %head
    = render :partial => 'layouts/head'
    
  %body
    #hld
      .wrapper
        = render :partial => 'layouts/navigation'
        = block do
          = block_head @title || "%s > %s" % [controller.controller_name.humanize, controller.action_name.humanize] do
            = yield :actions
          = block_content do
            = render :partial => 'layouts/flashes'
            = yield
